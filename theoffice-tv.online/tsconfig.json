{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es6", "dom", "es2015"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "resolveJsonModule": true,
    "paths": {
      "typescript-sdom": ["./packages/typescript-sdom"],
      "typescript-sdom/*": ["./packages/typescript-sdom/src/*"]
    }
  },
  "include": ["./src/*.ts"],
  "files": ["./src/index.ts"]
}
